doctype html
html(lang="en")
    head
        title Quick Graph
        link(rel='stylesheet' href='../css/stylesheet.css')
        script(src='../scripts/Chart.bundle.min.js')
        script(src='../js/popup.min.js')
    body
        h1 Quick Graph
        h3 X Values (Comma Seperated)
        textarea(id='xValues' rows='4' cols='50')
        h3 Y Values (Comma Seperated)
        textarea(id='yValues' rows='4' cols='50')
        button(id='generateGraph') Generate Graph
        h4(id='message')
        canvas(id='myChart' width='400' height='400')

