{
  "name": "testext",
  "version": "1.0.0",
  "description": "Basic chrome extension",
  "main": "popup.js",
  "dependencies": {
    "chart.js": "^2.6.0"
  },
  "devDependencies": {
    "concurrently": "^3.4.0",
    "jshint": "^2.9.4",
    "lite-server": "^2.3.0",
    "uglify-js": "^3.0.15"
  },
  "scripts": {
    "copy": "cp -rf src/html dist && cp -rf src/resources dist && cp src/manifest.json dist && cp -rf src/scripts dist",
    "build-js": "mkdir -p dist/js && uglifyjs src/js/popup.js -m -o dist/js/popup.min.js && npm run copy",
    "clean": "rm -R dist",
    "clean-build": "npm run clean && npm run build-js",
    "lint": "jshint src/**.js",
    "dev": "lite-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JimJZhu/TestChromeExtension.git"
  },
  "author": "Jim J Zhu",
